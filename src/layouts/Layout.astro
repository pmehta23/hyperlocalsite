---
// src/layouts/Layout.astro
const { title = 'Hyperlocal Mumbai', description = 'Stories and services from Mumbai' } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="min-h-screen bg-slate-50 text-slate-900">
    <header class="border-b border-slate-200 bg-white/80 backdrop-blur">
      <div class="max-w-5xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="font-semibold tracking-tight text-lg">
          Hyperlocal Mumbai
        </a>
        <nav class="flex gap-4 text-sm">
          <a href="/" class="hover:text-blue-600">Home</a>
          <a href="/stories" class="hover:text-blue-600">Stories</a>
          <a href="/gallery" class="hover:text-blue-600">Gallery</a>
          <a href="/contact" class="hover:text-blue-600">Contact</a>
        </nav>
      </div>
    </header>

    <main class="max-w-5xl mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="border-t border-slate-200 mt-16">
      <div class="max-w-5xl mx-auto px-4 py-6 text-xs text-slate-500 flex justify-between">
        <span>© {new Date().getFullYear()} Hyperlocal Mumbai</span>
        <span>Built on Astro • Hosted on AWS Amplify</span>
      </div>
    </footer>
  </body>
</html>

