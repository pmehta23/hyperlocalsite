---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { getHomePage, getStories } from '../lib/contentful';
import StoryCard from '../components/StoryCard.astro';

const page = await getHomePage();
const stories = await getStories();
---
<Layout title={page?.fields.title || 'Hyperlocal Mumbai'}>
  <section class="grid gap-8 md:grid-cols-[1.5fr,1fr] items-center mb-12">
    <div>
      <p class="text-xs uppercase tracking-[0.2em] text-blue-600 mb-2">Mumbai • Hyperlocal</p>
      <h1 class="text-3xl md:text-4xl font-semibold tracking-tight mb-3">
        {page?.fields.heroTitle || 'Stories, services and moments from Mumbai'}
      </h1>
      <p class="text-sm md:text-base text-slate-700 mb-4">
        {page?.fields.heroSubtitle || 'Discover curated stories, visuals and experiences from across the city.'}
      </p>
      <div class="flex flex-wrap gap-3 text-sm">
        <a href="/stories" class="inline-flex items-center rounded-full bg-blue-600 px-4 py-2 text-white font-medium">
          Browse stories
        </a>
        <a href="/contact" class="inline-flex items-center rounded-full border border-slate-300 px-4 py-2 text-slate-800">
          Work with us
        </a>
      </div>
    </div>
    <div class="hidden md:block">
      <div class="aspect-[4/3] w-full rounded-3xl bg-gradient-to-br from-blue-200 via-fuchsia-100 to-amber-100 flex items-center justify-center text-sm text-slate-700">
        {/* You can later replace this with an actual hero image fetched from Contentful if needed */}
        Hyperlocal visuals • GIFs • Stories
      </div>
    </div>
  </section>

  <section class="mb-12">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold tracking-tight">Latest stories from Mumbai</h2>
      <a href="/stories" class="text-xs text-blue-600 hover:underline">View all →</a>
    </div>
    {stories.length === 0 ? (
      <p class="text-sm text-slate-500">No stories yet. Ask your marketing team to add some in Contentful.</p>
    ) : (
      <div class="grid gap-4 md:grid-cols-3">
        {stories.slice(0, 3).map((story) => (
          <StoryCard story={story} />
        ))}
      </div>
    )}
  </section>
</Layout>

